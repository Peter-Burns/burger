<h1 class="title">Burgermeister</h1>
<img src="assets/img/burger.png"/>
<div class="available">
  <h2>Burgers that are available!</h2>
  <ul>
    {{#each burger}} {{#unless devoured}}
    <h1>
      {{this.burger_name}}
      <button class="devourBtn" data-id={{this.id}}>
        Devour
      </button>
    </h1>
    {{/unless}} {{/each}}
  </ul>
</div>

<div class="devoured">
  <h2>Burger that are Devoured</h2>
  <ul>
    {{#each burger}} {{#if devoured}}
    <h1>
      {{this.burger_name}}
    </h1>
    {{/if}} {{/each}}
  </ul>
</div>
<div class="newBurger">
  <h2>Add a new Burger!</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="newBurger">New Burger:</label>
      <input type="textarea" id="newBurger" name="name">
    </div>

    <button id="submit" type="submit">Add Burger</button>
  </form>
</div>